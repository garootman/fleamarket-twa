{
  "name": "twa-cf-tpl",
  "version": "1.0.0",
  "description": "Telegram Web App + Bot Template for Cloudflare",
  "scripts": {
    "install": "./scripts/install-all.sh",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "./scripts/server-control.sh start",
    "start:backend": "./scripts/server-control.sh start backend",
    "start:frontend": "./scripts/server-control.sh start frontend",
    "stop": "./scripts/server-control.sh stop",
    "stop:backend": "./scripts/server-control.sh stop backend",
    "stop:frontend": "./scripts/server-control.sh stop frontend",
    "restart": "./scripts/server-control.sh restart",
    "restart:backend": "./scripts/server-control.sh restart backend",
    "restart:frontend": "./scripts/server-control.sh restart frontend",
    "status": "./scripts/server-control.sh status",
    "logs": "./scripts/server-control.sh logs",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test -- --run",
    "test:frontend": "cd frontend && npm test -- --run",
    "test:all": "npm run test",
    "typecheck": "npm run typecheck:backend && npm run typecheck:frontend",
    "typecheck:backend": "cd backend && npm run typecheck",
    "typecheck:frontend": "cd frontend && npm run typecheck",
    "typecheck:all": "npm run typecheck",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run typecheck",
    "build:frontend": "cd frontend && npm run build",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint || echo 'No lint script found'",
    "lint:frontend": "cd frontend && npm run lint || echo 'No lint script found'",
    "dev-check": "npm run typecheck && npm run test",
    "ci-check": "npm run install && npm run typecheck && npm run test && npm run build",
    "clean": "./scripts/clean.sh",
    "validate": "./scripts/validate-env.sh",
    "tunnel:start": "./scripts/start-ngrok-tunnel.sh",
    "tunnel:stop": "./scripts/stop-ngrok-tunnel.sh",
    "tunnel:start:ngrok": "./scripts/start-ngrok-tunnel.sh",
    "tunnel:stop:ngrok": "./scripts/stop-ngrok-tunnel.sh",
    "tunnel:status": "./scripts/webhook-status.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/twa-cf-tpl.git"
  },
  "keywords": [
    "telegram",
    "web-app",
    "bot",
    "cloudflare",
    "workers",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "wrangler": "^4.39.0"
  }
}
