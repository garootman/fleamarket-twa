{
  "name": "twa-cf-tpl",
  "version": "1.0.0",
  "description": "Telegram Web App + Bot Template for Cloudflare",
  "scripts": {
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:all": "npm run test:backend && npm run test:frontend",
    "typecheck:backend": "cd backend && npm run typecheck",
    "typecheck:frontend": "cd frontend && npm run typecheck",
    "typecheck:all": "npm run typecheck:backend && npm run typecheck:frontend",
    "validate": "./scripts/validate-env.sh",
    "tunnel": "./scripts/webhook-local.sh",
    "tunnel:stop": "./scripts/stop-tunnel.sh",
    "webhook:status": "./scripts/webhook-status.sh",
    "deploy:preview": "cd backend && npm run deploy:preview",
    "deploy:prod": "cd backend && npm run deploy:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/twa-cf-tpl.git"
  },
  "keywords": [
    "telegram",
    "web-app",
    "bot",
    "cloudflare",
    "workers",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "wrangler": "^4.39.0"
  },
  "dependencies": {
    "grammy": "^1.38.2"
  }
}
